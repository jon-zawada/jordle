{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "comma-dangle": 0,
        "react/function-component-definition": 0,
        "react/prop-types": 0,
        "react/no-array-index-key": 0,
        "no-plusplus": 0
    },
    "ignorePatterns": ["app/dist/bundle.js"]
}
